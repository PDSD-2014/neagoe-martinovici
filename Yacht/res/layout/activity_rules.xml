<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true">
 <LinearLayout
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
  >
   
 
<ImageView
    android:id="@+id/i1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/spin" >
      
</ImageView>

<TextView
    android:id="@+id/one"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/howto1"
    android:layout_below="@id/i1"
    android:textColor="@color/black"
    android:textSize="20dp"
    android:typeface="serif" />

<ImageView
    android:id="@+id/i2"
    android:layout_width="wrap_content"
    android:layout_below="@id/one"
    android:layout_height="wrap_content" 
    android:layout_centerHorizontal="true"
    android:src="@drawable/keep" >

</ImageView>

<TextView
    android:id="@+id/two"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/howto2"
    android:layout_below="@id/i2"  
    android:textColor="@color/black"
    android:textSize="20dp"
    android:typeface="serif"></TextView>

<ImageView
    android:id="@+id/i3"
    android:layout_width="wrap_content"
    android:layout_below="@id/two"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:src="@drawable/choice" >
    
</ImageView>
 
<TextView
    android:id="@+id/three"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/i3"
    android:text="@string/howto3"
    android:textColor="@color/black"
    android:textSize="20dp"
    android:typeface="serif" />


</LinearLayout>
</ScrollView>
   

